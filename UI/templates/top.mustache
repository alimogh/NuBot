      <script>

              var host = "localhost";
              var port = 4567;
              var baseurl = "http://" + host + ":" + port;
              var updateTime = 2000;

        $(document).ready(function() {

          $('#startbot').click(function(){

                console.log("calling start on server");

                var jsondata = JSON.stringify({
                    "operation": "start"});

              $.ajax(baseurl + "/startstop", {
                    data : jsondata,
                    contentType : 'application/json',
                    type : 'POST',
