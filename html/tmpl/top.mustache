      <script>

              var host = "localhost";
              var port = 4567;


            function loadlog() {

                var url = "http://" + host + ":" + port + "/logdump";

                $.ajax({
                  type: "GET",
                  dataType: "json",
                  url: url,
                })
                .done(function( data ) {
                  $('#logarea').text(data);
                });

            }

